# LLM Provider Configuration
# Choose one: openai, anthropic, google
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7

# API Keys (provide at least one)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=...

# Embeddings Configuration
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small

# Database Configuration
DATABASE_URL=sqlite:///./data/agent.db
CHROMA_PERSIST_DIR=./data/chroma

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# RAG Configuration
RAG_CHUNK_SIZE=600
RAG_CHUNK_OVERLAP=100
RAG_TOP_K=8
RAG_CONFIDENCE_THRESHOLD=0.6

# Decision Engine Thresholds
CONFIDENCE_HIGH_THRESHOLD=0.75
CONFIDENCE_LOW_THRESHOLD=0.5

# Tool Configuration (for production integrations)
# SENDGRID_API_KEY=...
# SENDGRID_FROM_EMAIL=agent@yourcompany.com
# GOOGLE_CALENDAR_CREDENTIALS_PATH=./credentials/google_calendar.json
# HUBSPOT_API_KEY=...
# HUBSPOT_BASE_URL=https://api.hubapi.com

# Observability
LOG_LEVEL=INFO
LOG_FILE=./data/logs/agent.log
ENABLE_TRACE_LOGGING=true

# Job Scheduler
ENABLE_BACKGROUND_JOBS=true
FOLLOWUP_CHECK_INTERVAL_MINUTES=30
